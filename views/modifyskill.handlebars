<div id="main">

  <h1>MODIFY SKILLS</h1>

  <h2>
    {{#if isLoggedIn}}
      Hi,{{name}}! &nbsp; &nbsp;
    {{/if}}</h2>

  <div class="container" class="form-group">
    {{#if isLoggedIn}}
      {{#if isAdmin}}
        <form  class="column col-6 col-md-10 col-sm-12" action="/skills/update/{{skill.sid}}" method="post">
        <fieldset>
            <label class="form-label" for="skillName">Skill name: </label>
            <input class="form-input" type="text" name="skillName" id="skillName" value="{{skill.sname}}" required="required">
            <br>
            <label class="form-label" for="skillPro">Skill proficiency: </label>
            <select class="form-select" name="skillPro" id="skillPro" required="required">
                <option value="Basic" {{#if (theTypeB skill.spro)}} selected = "selected" {{/if}}>Basic</option>
                <option value="Competent" {{#if (theTypeC skill.spro)}} selected = "selected" {{/if}}>Competent</option>
                <option value="Skilled" {{#if (theTypeS skill.spro)}} selected = "selected" {{/if}}>Skilled</option>
                <option value="Professional"  {{#if (theTypeP skill.spro)}} selected = "selected" {{/if}}>Professional</option>
            </select>
            <br>
        </fieldset>
        <input type="submit" value="Modify skill">
        </form>
         {{else}}
         <p>Sorry, you must be an administrator to add a new skill!</p>
         {{/if}}
     {{else}}
       <p>
         Sorry, you must login to add a new skill!
       </p>
     {{/if}}
    </div>
  </div>
</div>