<div id="main">

  <h1>MODIFY PROJECTS</h1>

  <h2>
    {{#if isLoggedIn}}
      Hi,{{name}}! &nbsp; &nbsp;
    {{/if}}</h2>

  <div class="container" class="form-group">
    {{#if isLoggedIn}}
      {{#if isAdmin}}
        <form action="/projects/update/{{project.pid}}" method="post">
        <fieldset>
            <label class="form-label" for="projname">Project name: </label>
            <input class="form-input" type="text" name="projname" id="projname" value="{{project.pname}}" required="required">
            <br>
            <textarea class="form-input" name="projdesc" id="projdesc" cols="30" rows="10" required="required">{{project.pdesc}}</textarea>
            <br>
            <label class="form-label" for="projtype">Project type: </label>
            <select class="form-select" name="projtype" id="project" required="required">
                <option value="Game" {{#if (theTypeG project.ptype)}} selected = "selected" {{/if}}>Game</option>
                <option value="Design" {{#if (theTypeD project.ptype)}} selected = "selected" {{/if}}>Design</option>
                <option value="Website" {{#if (theTypeW project.ptype)}} selected = "selected" {{/if}}>Website</option>
                <option value="Other" {{#if (theTypeO project.ptype)}} selected = "selected" {{/if}}>Other</option>
            </select>
            <br>
            <label class="form-label" for="projimg">Project image URL: </label>
            <input class="form-input" type="text" name="projimg" id="projimg" placeholder="/img/" value="{{project.pimgURL}}" required="required">
            <br>
        </fieldset>
        <input type="submit" value="Modify project">
        </form>
         {{else}}
         <p>Sorry, you must be an administrator to add a new project!</p>
         {{/if}}
     {{else}}
       <p>
         Sorry, you must login to add a new project!
         Please go to the <a href="/login">login</a> page.
       </p>
     {{/if}}
    </div>
  </div>
</div>